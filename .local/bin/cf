#!/usr/bin/env sh

c=~/.config

case "$1" in
    alacritty)      echo $c/alacritty/alacritty.yml ;;
    fish)           echo $c/fish/config.fish ;;
    fish-misc)      echo $c/fish/functions/misc.fish ;;
    fish-com)       echo $c/fish/completions/misc.fish ;;
    fish-tmp)       echo $c/fish/tmp.fish ;;
    fish-alias)     echo $c/fish/alias.fish ;;
    alias)          echo ~/.alias ;;
    alias-tmp)      echo ~/.alias-tmp ;;
    alias-gui)      echo ~/.alias-gui ;;
    alias-gui-tmp)  echo ~/.alias-gui-tmp ;;
    vim)            echo ~/.vimrc ;;
    vim-theme)      echo ~/.vim/colors/customtheme.vim ;;
    nvim)           echo $c/nvim/init.vim ;;
    vifm)           echo $c/vifm/vifmrc ;;
    git)            echo ~/.gitconfig ;;
    i3)             echo $c/i3/config ;;
    i3status)       echo $c/i3status/config ;;
    picom)          echo $c/picom.conf ;;
    dmenu)          echo ~/.local/bin/dmenu_run ;;
    ff)             echo ~/.mozilla/firefox/haris/chrome/userChrome.css ;;
    ff-min)         echo ~/.mozilla/firefox/minimal/chrome/userChrome.css ;;
    tridactyl)      echo ~/.config/tridactyl/tridactylrc ;;
    schim)          echo $c/schim/schim.conf ;;
    schim-volatile) echo $c/schim/volatile.conf ;;
esac
