alias src_fish='source ~/.config/fish/config.fish'
alias emacs 'o emacsclient --create-frame'

abbr rm 'rm -i'
abbr mv 'mv -i'

abbr tdm 'tdm --disable-xrunning-check'
abbr g 'git'
abbr v 'vim'
abbr s 'sudo'
# Pacman commands
abbr p   'pacman'
abbr pqi 'pacman -Qi'
abbr pql 'pacman -Ql'
abbr pqo 'pacman -Qo'
abbr pqs 'pacman -Qs'
abbr pss 'pacman -Ss'
abbr sp  'sudo pacman'
abbr sps 'sudo pacman -S'
abbr spr 'sudo pacman -R'

abbr py 'python'
abbr copy 'xsel -b'
abbr paste 'xsel -b -o'

abbr yt 'ytfzf -t -s'
abbr d  'drys'
abbr vf 'vim (fzf)'
abbr fm 'vifm'

set aur 'aur@aur.archlinux.org'
